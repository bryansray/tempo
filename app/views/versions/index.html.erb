<style>
div.versions
{
    font-family: Tahoma;
    font-size: 10pt;

    padding: 5px;
}

div.version 
{
    padding: 5px;
}
</style>
<div class="versions">
  <% @versions.each do |version| 
    user = User.find(version.user_id) %>
    
    <div class="version <%= version.version % 2 == 0 ? 'even' : 'odd' %>">
        <p><%= link_to version.title, polymorphic_path(@content.owner) + "/versions/#{version.version}" %></p>

        <p>Edited by: <%= link_to user, user_path(user), :title => "Edited By" %></p>
    </div>
    
  <% end %>
</div>