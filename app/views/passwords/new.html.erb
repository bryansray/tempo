<% form_tag url_for(:action => "create") do %>
  <fieldset>
      <dl>
          <dt><label for="user_email" class="block">Enter the email address used to create your account</label></dt>
          <dd><%= text_field_tag :email %></dd>
      </dl>
      <%= submit_tag 'Reset Password' %>
  </fieldset>
<% end %>