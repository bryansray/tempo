<h2>Editing Team Members for <%= link_to "'#{@team.title}'", team_path(@team) %></h2>
<p id="status"></p>
<div class="inner_left">
	<h2>Members</h2>
	<ul class="drag-list" id="members">
	<% @team.users.each do |user| -%>
		<li id="user_<%=h user.id %>"><%=h user %></li>
	<% end -%>
	</ul>
</div>
<div class="inner_right">
	<h2>Available</h2>
	<ul class="drag-list" id="non_members">
	<% @non_members.each do |user| -%>
		<li id="user_<%=h user.id %>"><%=h user %></li>
	<% end -%>
	</ul>
</div>
		
<%= sortable_element 'members', 
	:update => 'status',
	:containment => ['members', 'non_members'],
	:dropOnEmpty => true,
	:url => { :action => "update_users" } %>
