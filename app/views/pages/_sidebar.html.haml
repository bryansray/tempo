- if controller.action_name == "index"
  - if logged_in?
    .Section
      %h3 Options

      .content#Options
        = link_to "Create a new page", new_page_path, :class => "icon icon_new_page"
    .Section
      %h3 Tags

      .content#Options
        %div{ :class => 'tag-cloud' }
          - tag_cloud @tags, %w(tag_cloud1 tag_cloud2 tag_cloud3 tag_cloud4) do |tag, css_style|

            %span{ :class => 'tag' }
              = link_to tag.name, tag_path(tag), :style => "float: left;", :class => css_style

- elsif controller.action_name == "new"
  .Section
    %h3 Options

    .content#Options
      = link_to_remote "Copy from OpenWiki", {:method => :get, :url => import_pages_path, :complete => "$('import_link').toggle()"}, :class => "icon icon_copy_page", :id => "import_link"
      #import_form

  .Section
    %h3 Tags
    .content
      = render :partial => "tags/tag_applicator"

- elsif controller.action_name == "edit"
  .Section
    %h3 Tags
    .content
      = render :partial => "tags/tag_applicator", :locals => { :selected => @page.content.tag_list.to_a }

- elsif controller.action_name == "show"
  .Section
    %h3 Options
    
    .content#Options
      = link_to "Create a new page", new_page_path, :class => "icon icon_new_page"
      = link_to_function("Edit this page", "$('page-content').hide(); $('page-content-form').show();", :class => "icon icon_edit_page")
      = link_to_remote("Set this page as default", {:url => set_default_page_path(@page), :complete => "Ext.DataCert.msg('Preferences', 'Default Page Set.');"}, :class => "icon icon_star_page")

  .Section 
    %h3
      %div#tag_edit= link_to_remote "Edit", :url => edit_tags_page_path(@page), :complete => "$('Tags_Form').blindDown();", :method => :get
      %div#tag_cancel{:style => "display:none"}= link_to_function "Cancel", "$('tag_edit').toggle();$('tag_cancel').toggle();$('Tags_Form').remove(); $('Tags').blindDown();"
      Tags

    .content
      = render :partial => "tags/tags", :object => @page.tags

  = render :partial => "attachments/sidebar_section", :locals => {:content => @page.content}

  .Section
    %h3 Properties
    
    .content
      %table
        %tbody
          %tr
            %th Page Owner
            %td= link_to @page.user, user_path(@page.user)
          %tr
            %th Last Modified
            %td= link_to @page.content.user, user_path(@page.content.user)